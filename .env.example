# Environment Configuration for The Hive
# Copy this file to .env and fill in your values

# API Keys
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=optional_for_compatibility

# DeepSeek Local (Ollama)
DEEPSEEK_BASE_URL=http://localhost:11434
DEEPSEEK_MODEL=deepseek-coder:33b

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=agent_memory

# Evolution Parameters
POPULATION_SIZE=20
MUTATION_RATE=0.1
CROSSOVER_RATE=0.7
GENERATIONS=100
ELITE_SIZE=2

# Agent Configuration
MAX_ACTIONS_PER_DAY=1000
ACTION_COOLDOWN_SECONDS=60
FITNESS_EVALUATION_INTERVAL=86400  # 24 hours in seconds

# Content Empire Settings
WORDPRESS_URL=https://your-site.com
WORDPRESS_USERNAME=your_username
WORDPRESS_PASSWORD=your_password

# Device Farm Settings (Optional)
APPIUM_SERVER_URL=http://localhost:4723
ANDROID_DEVICES=emulator-5554,emulator-5556

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/hive.log

# Flask Settings
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000
