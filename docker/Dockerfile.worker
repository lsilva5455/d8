# ============================================
# D8 Worker Node - Multi-Architecture Support
# ============================================
# Supports: amd64 (x86_64), arm64 (Raspberry Pi 4)
# Usage: docker build -f docker/Dockerfile.worker --build-arg WORKER_TYPE=deepseek -t d8-worker-deepseek .

# Base image - compatible with ARM64 and AMD64
FROM python:3.11-slim-bookworm

# Build arguments
ARG WORKER_TYPE=groq
ARG TARGETPLATFORM
ARG BUILDPLATFORM

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV WORKER_TYPE=${WORKER_TYPE}
ENV DEBIAN_FRONTEND=noninteractive

# Labels
LABEL maintainer="D8 Project"
LABEL description="D8 Distributed Worker Node"
LABEL worker.type="${WORKER_TYPE}"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    libssl-dev \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy requirements first (layer caching)
COPY requirements.txt .

# Install Python dependencies
# Use --no-cache-dir to reduce image size
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY lib/ ./lib/
COPY app/ ./app/
COPY scripts/ ./scripts/

# Create data directories
RUN mkdir -p /app/data/logs /app/data/cache

# Copy worker startup script
COPY docker/entrypoint-worker.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8080/health', timeout=5)" || exit 1

# Expose port for worker status endpoint
EXPOSE 8080

# Run as non-root user for security
RUN useradd -m -u 1000 d8worker && \
    chown -R d8worker:d8worker /app
USER d8worker

# Entrypoint
ENTRYPOINT ["/entrypoint.sh"]
